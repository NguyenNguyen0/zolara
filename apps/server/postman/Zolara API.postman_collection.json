					"name": "Get All Roles",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.length > 0) {",
									"        // Save first ADMIN role ID",
									"        const adminRole = response.data.find(r => r.name === 'ADMIN');",
									"        if (adminRole) {",
									"            pm.environment.set('adminRoleId', adminRole.id);",
									"        }",
									"        // Save first USER role ID",
									"        const userRole = response.data.find(r => r.name === 'USER');",
									"        if (userRole) {",
									"            pm.environment.set('userRoleId', userRole.id);",
									"        }",
									"        // Save first role ID as default roleId",
									"        pm.environment.set('roleId', response.data[0].id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
